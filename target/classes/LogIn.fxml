<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="540.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22" fx:controller="application.LogInController">
   <children>
      <AnchorPane prefHeight="94.0" prefWidth="540.0" style="-fx-background-color: #0000FF;">
         <children>
            <Label layoutX="197.0" layoutY="24.0" text="Login Here" textFill="WHITE">
               <font>
                  <Font size="30.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
      <TextField fx:id="emailField" layoutX="49.0" layoutY="163.0" prefHeight="27.0" prefWidth="441.0" promptText="Email" />
      <TextField fx:id="passwordField" layoutX="49.0" layoutY="224.0" prefHeight="25.0" prefWidth="441.0" promptText="Password" />
      <Button fx:id="loginButton" layoutX="49.0" layoutY="367.0" mnemonicParsing="false" prefHeight="45.0" prefWidth="441.0" style="-fx-background-color: #0000FF;" text="Login" textFill="WHITE" onAction="#handleLoginButtonAction">
         <font>
            <Font size="20.0" />
         </font>
      </Button>
      <Button fx:id="closeButton" layoutX="49.0" layoutY="440.0" mnemonicParsing="false" prefHeight="45.0" prefWidth="441.0" style="-fx-background-color: #0000FF;" text="Close" textFill="WHITE" onAction="#handleCloseButtonAction">
         <font>
            <Font size="20.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
